                                    <TextBlock  Foreground="White"  HorizontalAlignment="Center" VerticalAlignment="Center"   ><Run Text="G"/></TextBlock>
                                </StackPanel>
                            </Button>
                            <!--H-->
                            <Button Grid.Column="5" Style="{StaticResource KeyBoardButton}" Command="local:KeyBoard._CmdH"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                    <TextBlock  Foreground="White"  HorizontalAlignment="Center" VerticalAlignment="Center"   ><Run Text="H"/></TextBlock>
                                </StackPanel>
                            </Button>
                            <!--J-->
                            <Button  Grid.Column="6" Style="{StaticResource KeyBoardButton}" Command="local:KeyBoard._CmdJ"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" >
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                    <TextBlock  Foreground="White"  HorizontalAlignment="Center" VerticalAlignment="Center"   ><Run Text="J"/></TextBlock>
                                </StackPanel>
                            </Button>
                            <!--K-->
